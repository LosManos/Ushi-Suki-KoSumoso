{
    "name": "kosumoso",
    "productName": "Kosumoso",
    "description": "Ushi-Suki-Kosumoso Cosmos DB Query Tool",
    "private": true,
    "version": "0.3.3",
    "author": "LosManos",
    "license": "LGPLv3+NoEvil",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "concurrently \"tsc -w -p tsconfig.electron.json\" \"vite\" \"wait-on tcp:5173 && unset ELECTRON_RUN_AS_NODE && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
        "compile": "tsc -p tsconfig.electron.json && vite build",
        "build": "npm run compile && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "@azure/cosmos": "^4.0.0",
        "@azure/identity": "^4.13.0",
        "diff": "^8.0.2",
        "lucide-react": "^0.561.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/diff": "^7.0.2",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^35.7.5",
        "electron-builder": "^24.13.3",
        "typescript": "^5.2.2",
        "vite": "^7.3.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.losmanos.ushi-suki-kosumoso",
        "productName": "Kosumoso",
        "directories": {
            "output": "release/${version}",
            "buildResources": "public"
        },
        "files": [
            "dist",
            "dist-electron",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                "dmg"
            ],
            "icon": "public/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "public/v_windows.png"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "public/icon-source.png"
        },
        "publish": {
            "provider": "github",
            "owner": "LosManos",
            "repo": "Ushi-Suki-KoSumoso"
        }
    }
}